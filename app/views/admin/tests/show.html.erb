<p>
  <strong>Name: </strong>
  <%= @test.title %>
</p>

<p>
  <strong>Level: </strong>
  <%= @test.level %>
</p>


<h2>Questions</h2>
<%= link_to 'Add a question', new_admin_test_question_path(@test)%>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Question</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @test.questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.body %></td>
        <td><%= link_to 'Answers', admin_question_answers_path(question) %></td>
        <td><%= link_to 'Edit', edit_admin_question_path(question) %></td>
        <td><%= link_to 'Delete', admin_question_path(question), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'All tests', admin_tests_path %></p>
