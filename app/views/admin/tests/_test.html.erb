<tr>
  <td><%= test.id %></td>
  <td>
    <%= content_tag :span, test.title, class: 'test-title', data: { test_id: test.id } %>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td align="center"><%= test.level %></td>
  <td><%= test.category.title %></td>
  <td><%= test.author&.full_name %></td>
  <td align="center"><%= test.questions.count %></td>
  <td><%= link_to t('buttons.show'), admin_test_path(test), class: "btn btn-primary" %></td>
  <td>
    <%= link_to t('buttons.edit'), edit_admin_test_path(test),
                data: { test_id: test.id },
                class: "btn btn-warning form-inline-link" %>
  </td>
  <td><%= link_to t('buttons.delete'), admin_test_path(test), method: :delete, data: { confirm: t('confirmations.sure') }, class: "btn btn-danger" %></td>
</tr>