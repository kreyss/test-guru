<div class="row justify-content-center">
  <div class="col">
    <h1 align="center"><%= t('gists.index.header') %></h1>

    <table class="table table-hover">
      <thead>
      <tr>
        <th>ID</th>
        <th><%= t('activerecord.attributes.question.body') %></th>
        <th>URL</th>
        <th>Email</th>
      </tr>
      </thead>
      <tbody>
        <% @gists.each do |gist| %>
          <tr>
            <td><%= gist.id %></td>
            <td><%= link_to "#{gist.question.body.truncate(25)}...", admin_question_path(gist.question) %></td>
            <td><a href="#{gist.url}" target="_blank"><%= gist.url %></a></td>
            <td><%= gist.user.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
