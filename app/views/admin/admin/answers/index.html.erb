      <th></th>
      <th>Answer</th>
      <th>Correctness</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <%= render @answers %>
  </tbody>
</table>

    <%= link_to 'Back to', admin_test_path(@question.test), class: "btn btn-primary mb-3" %>
  </div>
</div>
