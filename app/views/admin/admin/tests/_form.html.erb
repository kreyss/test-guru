<%= form_with model: [:admin, @test], local: true do |form| %>
  <div class="form-group">
    <%= render 'shared/errors', resource: @test %>

    <%= form.number_field :author_id, value: current_user.id, id: :author_id, hidden: true %>

    <%= form.label :title %>
    <%= form.text_field :title, id: :test_title, class: "form-control mb-3" %>

    <%= form.label :level %>
    <%= form.number_field :level, id: :test_level, class: "form-control mb-3" %>

    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true, class: "form-control" %><br>
    <%= form.submit 'Создать', class: "btn btn-primary mt-3" %>
  </div>
<% end %>
