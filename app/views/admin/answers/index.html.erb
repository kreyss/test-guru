<h1><%= @question.test.title %></h1>
<h3>Question: <%= @question.body %></h3>

<p>
  <%= link_to 'New answer', new_admin_question_answer_path(@question) %>
</p>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Answer</th>
      <th>Correctness</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <%= render @answers %>
  </tbody>
</table>

<p><%= link_to 'Back to', admin_test_path(@question.test) %></p>
